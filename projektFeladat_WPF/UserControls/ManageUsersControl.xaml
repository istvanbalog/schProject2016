<UserControl x:Class="projektFeladat_WPF.UserControls.ManageUsersControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:projektFeladat_WPF.UserControls" 
             xmlns:ViewModels="clr-namespace:projektFeladat_WPF.ViewModels"
             mc:Ignorable="d"             
             Height="378.587" Width="568.173">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="104*"/>
            <ColumnDefinition Width="83*"/>
        </Grid.ColumnDefinitions>
        <ListBox HorizontalAlignment="Stretch" Height="auto " Margin="10,10,10,10" VerticalAlignment="Stretch" Width="Auto" ItemsSource="{Binding Path=UserList}" SelectedItem="{Binding Path=SelectedUser}"  />
        <Label Content="Name:" Grid.Column="1" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
        <Label Content="Usertype:" Grid.Column="1" HorizontalAlignment="Left" Margin="10,64,0,0" VerticalAlignment="Top"/>
        <Label Content="EduID:" Grid.Column="1" HorizontalAlignment="Left" Margin="10,123,0,0" VerticalAlignment="Top"/>
        <TextBox Grid.Column="1" HorizontalAlignment="Stretch" Height="23" Margin="10,36,10,0" TextWrapping="Wrap" Text="{Binding Path=SelectedUser.FirstName}"   VerticalAlignment="Top" Width="Auto" />
        <TextBox Grid.Column="1" HorizontalAlignment="Stretch" Height="23" Margin="10,95,10,0" TextWrapping="Wrap" Text="{Binding Path=SelectedUser.UserType}" VerticalAlignment="Top" Width="Auto"/>
        <TextBox Grid.Column="1" HorizontalAlignment="Stretch" Height="23" Margin="10,154,10,0" TextWrapping="Wrap" Text="{Binding Path=SelectedUser.EduId}" VerticalAlignment="Top" Width="Auto"/>
        <Button Content="Add" Grid.Column="1" HorizontalAlignment="Left" Margin="10,346,0,0" VerticalAlignment="Top" Width="75"/>
        <Button Content="Edit" Grid.Column="1" HorizontalAlignment="Left" Margin="90,346,0,0" VerticalAlignment="Top" Width="75"/>
        <Button Content="Delete" Grid.Column="1" HorizontalAlignment="Left" Margin="170,346,-9,0" VerticalAlignment="Top" Width="75"/>


    </Grid>
</UserControl>
